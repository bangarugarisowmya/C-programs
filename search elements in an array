#include <stdio.h>

int search(int arr[], int n, int x) {
    for (int i = 0; i < n; i++)
        if (arr[i] == x) return i; // return index if found
    return -1; // not found
}

int main() {
    int arr[] = {2, 3, 4, 10, 40};
    int x = 10;
    int n = sizeof(arr) / sizeof(arr[0]);
    int result = search(arr, n, x);
    (result == -1) ? printf("%d not found", x) : printf("%d found at index %d", x, result);
    return 0;
}
OUTPUT :
10 found at index 3
