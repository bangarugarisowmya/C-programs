#include <stdio.h>

// Bubble Sort
void bubble(int a[], int n) {
    for(int i=0; i<n-1; i++)
        for(int j=0; j<n-i-1; j++)
            if(a[j]>a[j+1]) { int t=a[j]; a[j]=a[j+1]; a[j+1]=t; }
}

// Selection Sort
void selection(int a[], int n) {
    for(int i=0; i<n-1; i++) {
        int m=i;
        for(int j=i+1; j<n; j++) if(a[j]<a[m]) m=j;
        int t=a[i]; a[i]=a[m]; a[m]=t;
    }
}

// Insertion Sort
void insertion(int a[], int n) {
    for(int i=1; i<n; i++) {
        int k=a[i], j=i-1;
        while(j>=0 && a[j]>k) { a[j+1]=a[j]; j--; }
        a[j+1]=k;
    }
}

// Print array
void p(int a[], int n) { for(int i=0; i<n; i++) printf("%d ", a[i]); printf("\n"); }

int main() {
    int a[] = {5, 2, 8, 1};
    int n = 4;

    printf("Original: "); p(a, n);
    bubble(a, n); printf("Bubble: "); p(a, n);

    int b[] = {5, 2, 8, 1};
    selection(b, n); printf("Selection: "); p(b, n);

    int c[] = {5, 2, 8, 1};
    insertion(c, n); printf("Insertion: "); p(c, n);
}
OUTPUT :
Original: 5 2 8 1 
Bubble: 1 2 5 8 
Selection: 1 2 5 8 
Insertion: 1 2 5 8 
