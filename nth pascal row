#include <stdio.h>
#include <stdlib.h>

int* getRow(int rowIndex, int* returnSize) {
    *returnSize = rowIndex + 1;
    int* row = (int*)malloc((*returnSize) * sizeof(int));
    
    row[0] = 1;
    for (int i = 1; i <= rowIndex; i++) {
        row[i] = (long long)row[i-1] * (rowIndex - i + 1) / i;
    }
    
    return row;
}

int main() {
    int n;
    printf("Enter row index (0-based): ");
    scanf("%d", &n);

    int returnSize;
    int* row = getRow(n, &returnSize);

    printf("Row %d: ", n);
    for (int i = 0; i < returnSize; i++)
        printf("%d ", row[i]);
    printf("\n");

    free(row);
    return 0;
}

OUTPUT : 
Enter row index (0-based): 6
Row 6: 1 6 15 20 15 6 1 
