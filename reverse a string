#include <stdio.h>
#include <string.h>

void reverse(char* s, int l, int r) {
    if (l >= r) return;
    char t = s[l]; s[l] = s[r]; s[r] = t;
    reverse(s, l + 1, r - 1);
}

int main() {
    char s[] = "hello";
    int n = strlen(s);
    reverse(s, 0, n - 1);
    printf("Reversed: %s", s);
    return 0;
}
OUTPUT :
Reversed: olleh
