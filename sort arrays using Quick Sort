#include <stdio.h>

int part(int a[], int l, int h) {
    int p=a[h], i=l-1, j;
    for(j=l; j<h; j++) if(a[j]<p) { i++; int t=a[i]; a[i]=a[j]; a[j]=t; }
    int t=a[i+1]; a[i+1]=a[h]; a[h]=t; return i+1;
}

void qs(int a[], int l, int h) {
    if(l<h) { int p=part(a,l,h); qs(a,l,p-1); qs(a,p+1,h); }
}

void p(int a[], int n) { for(int i=0;i<n;i++)printf("%d ",a[i]); printf("\n"); }

int main() {
     int a[]={3,2,6,1,4,2}; int n=6;
    printf("Original: "); p(a,n);
    qs(a,0,n-1);
    printf("Sorted: "); p(a,n);
}
OUTPUT :
Original: 3 2 6 1 4 2 
Sorted: 1 2 2 3 4 6 
